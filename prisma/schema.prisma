// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:app.db"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  date_created DateTime
}

model Post {
  id      Int      @id @default(autoincrement())
  author  String
  content String?
  title   String
  date    DateTime
}
